doctype html
html(lang='en')
	head
		include ../pug-templates/basicHead
		include ../pug-templates/pilarHead
		+pilarTitle('Contratar')
	body
		.wrapper
			.overlay
			nav
				div.trigger.trigger-pilar
					ul
						li
						li
						li
					span MENU
				div.menu
					a(class='link', href='../') Inicio
					span PILARES:
					include ../pug-templates/pilar_li_item
					ul
						+liItem('contratar','link')
						+liItem('receber','link-selected')
						+liItem('inspirar','link')
						+liItem('falar','link')
						+liItem('escutar','link')
						+liItem('agradecer','link')
						+liItem('desenvovler','link')
						+liItem('cuidar','link')
						+liItem('celebrar','link')
						+liItem('compartilhar','link')
					include ../pug-templates/pilar_menu_gptw
			include ../pug-templates/pilarHeader
			.hero-bg
			section.title
				img(src="../img/pilares/contratar.png")
				h1 Receber
				.arrow-down
			.container.cover
				h3 Welcome
				p Desde o ok na proposta, noss@s candidat@s já são parte do time e tratados com todo carinho!
				.underline.underline-accent
				img.cover-contain(src='img/programa-integracao.png')
			section
				.container.content-50-50
					.txt-list
						h2 Programa de Onboarding
						ul
							li
								p Welcome e-mail, Welcome bag, Welcome SMS, Welcome kit, Welcome baloon, Welcome you, Welcome to Movile, Welcome Talk
					.slider
						.Wallop.Wallop--slide.Wallop--1
							.Wallop-list
								.Wallop-item.bg-contain(style='background-image:url(img/welcome1.png)')
								.Wallop-item.Wallop-item--current.bg-contain(style='background-image:url(img/welcome2.jpg)')
								.Wallop-item.bg-contain(style='background-image:url(img/welcome3.jpg)')
								.Wallop-item.bg-contain(style='background-image:url(img/welcome4.jpg)')
								.Wallop-item.bg-contain(style='background-image:url(img/welcome5.png)')
								.Wallop-item.bg-contain(style='background-image:url(img/welcome6.png)')
								.Wallop-item.bg-contain(style='background-image:url(img/welcome7.png)')
								.Wallop-item.bg-contain(style='background-image:url(img/welcome8.png)')
							button.Wallop-buttonPrevious
							button.Wallop-buttonNext
			section.partial-bg-flat
				.container.content-50-50
					.img-full
						a.active-video(href="javascript:", data-video-path='videos/welcome-dreamers', data-video-format='mov')
							img.shadow(src="videos/welcome-dreamers.png")
					.txt-list
						h2 Aprovação Comemorável 
						ul
							li
								p Pais, amigos, amigas, namorados, namoradas… nada mais marcante do que alguém tão significativo para anunciar a aprovação no nosso programa de estágio!
			section
				.centered.container
						h2 VIP Kit
						p Nosso kit de boas vindas para posições executivas e estratégicas!
						.underline.underline-accent
			section
				.container.images
					div
						img(src='img/vip-kit.jpg')
					div
						img(src='img/vip-kit2.jpg')
			section.partial-bg-gradient
				.container.content-50-50
					.slider
						.Wallop.Wallop--slide.Wallop--2
							.Wallop-list
								.Wallop-item(style='background-image:url(img/gd1.jpg)')
								.Wallop-item(style='background-image:url(img/gd2.jpg)')
